<!-- 所有订单 -->
<view class='addFruit' wx:if="{{cardNum === 4}}">
<view class='theList'>

  <view class="weui-cells weui-cells_after-title">
    <view wx:for="{{orderList}}" wx:key="pay" class='listItem' wx:for-item="order">
      <view class='f_column'>
        <view>{{order.name}}</view>
        <view>{{order.phone}}</view>
        <view>{{order.address}}</view>
        <view wx:if="{{order==1}}">临期商品：</view>
        <view wx:if="{{order==2}}">信用商品：</view>
        <view wx:for="{{order.goods}}" wx:for-item="good">{{good.good_name}} × {{good.good_num}}</view>
        <view>备注：{{order.remark}}</view>
        <view>下单时间：{{order.orderTime}}</view>
        <view>订单已完成</view>                   
      </view>
    </view>
  </view>

</view>
</view>


