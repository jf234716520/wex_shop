/* miniprogram/pages/XyApprove/XyList.wxss */
page{
  background-color: #9bc1bc;
  font-size: 32rpx;
}
.navigator-hover{
  background: none;
}

.approve-box{
  padding-bottom: 100rpx;
  color: grey;
  font-size: 22rpx;
}
.approve-list{
  position: relative;
  padding: 20rpx 20rpx 20rpx 285rpx;
  height: 185rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.approve-list .approve-thumb{
  position: absolute;
  top: 20rpx;
  left: 85rpx;
  width: 185rpx;
  height: 185rpx;
}
.approve-list .approve-pro-name{
  padding-top: 15rpx;
  font-size: 35rpx;
  color: black;
  display: inline-block;
  width: 300rpx;
  height: 105rpx;
  line-height: 50rpx;
  overflow: hidden;
}

.approve-list .approve-count-box{
  position: absolute;
  left: 285rpx;
  bottom: 20rpx;
  width: 250rpx;
  height: 80rpx;
}
.approve-list .approve-count-box text{
  line-height: 80rpx;
  text-align: center;
  padding: 15rpx;
}
.approve-count-num{
  font-size: 30rpx;
}

.approve-count-num{
  width: 150rpx;
  border: rgb(241, 205, 136) 1.5rpx solid;
  border-radius: 10%;
}

/* ç©º */
.approve-no-data {
  text-align: center;
  color: rgb(143, 142, 142);
  font-size: 38rpx;
  margin: 50rpx;
}

.approveBtn {
  width: 120rpx;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 25rpx;
  background-color: rgb(250, 193, 87);
  border-radius: 10rpx;
  float: right;
  margin: 0 315rpx;
  text-align: center;
  color: white;
}
.order-icon {
  color: white;
  width: 150rpx;
  background-color: rgb(248, 188, 76);
  line-height: 70rpx;
  margin: 0rpx;
  float: right;
  border-radius: 10rpx;
  font-size: 25rpx;
  text-align: center;
  margin-right: 30rpx;
}
.order-icon-center {
  color: white;
  width: 150rpx;
  background-color: rgb(248, 188, 76);
  line-height: 70rpx;
  margin: 0rpx auto;
  border-radius: 10rpx;
  font-size: 25rpx;
  text-align: center;
 
}


